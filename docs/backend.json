
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "Follow": {
      "title": "Follow Relationship",
      "description": "Represents a follow relationship between two users.",
      "type": "object",
      "properties": {
        "followedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "SavedMovie": {
      "title": "Saved Movie",
      "description": "Represents a movie saved by a user.",
      "type": "object",
      "properties": {
        "id": { "type": "number" },
        "title": { "type": "string" },
        "poster_path": { "type": "string" },
        "overview": { "type": "string" },
        "savedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public user profile information."
    },
    "/users/{userId}/savedMovies/{movieId}": {
      "schema": { "$ref": "#/entities/SavedMovie" },
      "description": "Sub-collection storing movies saved by a user."
    },
    "/users/{userId}/following/{followedUserId}": {
      "schema": { "$ref": "#/entities/Follow" },
      "description": "Sub-collection storing users that this user is following."
    },
    "/users/{userId}/followers/{followerUserId}": {
      "schema": { "$ref": "#/entities/Follow" },
      "description": "Sub-collection storing users that are following this user."
    }
  }
}
