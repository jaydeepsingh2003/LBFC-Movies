
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);

      // SAVED MOVIES sub-collection
      match /savedMovies/{movieId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // FOLLOWING sub-collection
      match /following/{followedUserId} {
        allow read: if true;
        allow write, delete: if isOwner(userId);
      }

      // FOLLOWERS sub-collection
      match /followers/{followerUserId} {
        allow read: if true;
        allow write, delete: if isOwner(followerUserId);
      }

      // RATINGS sub-collection
      match /ratings/{movieId} {
        allow read, write: if isOwner(userId);
      }
    }

    // MOVIES collection for reviews
    match /movies/{movieId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // WATCH PARTIES collection
    match /watch-parties/{partyId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.hostId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.hostId == request.auth.uid;

      // RSVPs sub-collection
      match /rsvps/{userId} {
        allow read: if true;
        allow create, delete: if isOwner(userId);
      }

      // MESSAGES sub-collection (Chat)
      match /messages/{messageId} {
        allow read: if true;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      }
    }
  }
}
