
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    // USERS collection
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);

      // LOGIN ALERTS sub-collection
      match /loginAlerts/{alertId} {
        allow create: if isOwner(userId);
        allow read: if isOwner(userId);
      }

      // SAVED MOVIES sub-collection
      match /savedMovies/{movieId} {
        allow read, write, delete: if isOwner(userId);
      }

      // SAVED TV SHOWS sub-collection
      match /savedTvShows/{showId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // FOLLOWING sub-collection
      match /following/{followedUserId} {
        allow read: if true;
        allow write, delete: if isOwner(userId);
      }

      // FOLLOWERS sub-collection
      match /followers/{followerUserId} {
        allow read: if true;
        allow write, delete: if isOwner(followerUserId);
      }

      // RATINGS sub-collection
      match /ratings/{movieId} {
        allow read, write: if isOwner(userId);
      }
      
      // TV RATINGS sub-collection
      match /tvRatings/{showId} {
        allow read, write: if isOwner(userId);
      }
    }

    // MOVIES collection for reviews
    match /movies/{movieId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // TV SHOWS collection for reviews
    match /tv-shows/{showId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
